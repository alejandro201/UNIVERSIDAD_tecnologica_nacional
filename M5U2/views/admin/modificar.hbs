<div class="container" style="margin: 100px auto">
   <div class="row">
      <div class="col-6 offset-3">
         <h4>Modificar el  producto {{producto.id}} </h4>
         <form action="/admin/productos/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{producto.id}}" name="id">
            <div class="form-group">
                <label for="">Titulo</label>
               <input type="text" class="form-control" name="titulo" value="{{producto.titulo}}">
            </div> <br>
          <div class="form-group">
            <label for="">Cuerpo</label>
             <textarea class="form-control" name="cuerpo">{{producto.cuerpo}}</textarea>
          </div>
           <br>
            <div class="form-group">
               <p>
              <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
              </p>
              <p>
               <label><input type="checkbox" name="img_delete" id="img_delete" value="1" />
               Eliminar imagen actual</label>
               <input type="hidden" name="img_original" value="{{producto.img_id}}">
              </p>
              </div>
              <button type="submit" class="btn btn-primary">Modificar</button>
         </form>
           {{#if error}}
           <p>{{message}}</p>
           {{/if}}
      </div>
   </div> 
</div>